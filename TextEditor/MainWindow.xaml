<Window x:Class="TextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        
        mc:Ignorable="d"
        Title="DefaultName" Height="498.481" Width="798.756">
    <Grid>
        <TextBox Name="textBox" Margin="10,31,10,10" TextWrapping="Wrap"/>
        <Menu HorizontalAlignment="Left" Height="21" Margin="10,5,0,0" VerticalAlignment="Top" Width="40">
            <MenuItem Header="File">
                <MenuItem Header="New Project" Click="CreateNewFile" ></MenuItem>
                <MenuItem Name="OpenFileDialog" Header="Open file from disc" Click="OpenTextFromDisk"/>
                <MenuItem Name="ListFiles" Header="Open file from base">
                 
                   
                </MenuItem>
                <MenuItem Header="Save to base" Click="SaveText"></MenuItem>
                <MenuItem Header="Save to disk" Click="SaveTextToDisk"></MenuItem>
                <Separator />
                <MenuItem Header="Exit" ></MenuItem>
            </MenuItem>
           
        </Menu>


    </Grid>
</Window>
